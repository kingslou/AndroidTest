<resources>

    <!-- Customize here the subject of your application -->
    <style name="myTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nliveo_blue_colorPrimary</item>
        <item name="colorPrimaryDark">@color/nliveo_blue_colorPrimaryDark</item>
        <item name="colorAccent">@color/nliveo_blue_colorPrimary</item>
    </style>

    <!-- Here will be the theme of the class that will extends NavigationLiveo -->
    <style name="nLiveoDrawer" parent="nLiveo.Theme.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nliveo_blue_colorPrimary</item>
        <item name="colorPrimaryDark">@color/nliveo_blue_alpha_colorPrimaryDark</item>
        <item name="colorAccent">@color/nliveo_blue_colorPrimary</item>
    </style>

    <!-- viewpage文本  滑动标签标题 -->
    <style name="viewpage_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/viewpage_selector_slide_title</item>
        <item name="android:textSize">17sp</item>
    </style>
    <!-- 加载样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    <!-- 时间显示样式 -->
    <style name="item_section_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!-- list_item显示样式 -->
    <style name="item_title">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/item_title</item>
    </style>

    <style name="item_secondary_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/ss_comment_time</item>
    </style>

    <style name="item_local">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/item_local</item>
        <item name="android:background">@drawable/list_item_local_bg</item>
    </style>

    <style name="item_abstract">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/item_abstract</item>
    </style>

    <style name="item_image">
        <item name="android:background">@drawable/small_image_holder_listpage</item>
        <item name="android:layout_width">@dimen/item_image_width</item>
        <item name="android:layout_height">@dimen/item_image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="item_image_gap">
        <item name="android:layout_width">15.0dip</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="item_comment_content">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/default_text_night</item>
    </style>

    <style name="favorite_del_btn">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/favorite_delete_btn</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/favorite_btn_delete</item>
    </style>

    <style name="dislike_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/dialog_listpage_text</item>
    </style>

</resources>